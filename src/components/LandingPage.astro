---
const cards = [
  {
    name: "fjall",
    repo: "https://github.com/fjall-rs/fjall",
    description: "LSM-based embeddable key-value storage engine",
    license: "MIT / Apache",
    colors: {
      title: "text-blue-700 dark:text-blue-300",
      card: "hover:border-blue-500 hover:bg-blue-500",
    },
  },
  {
    name: "lsm-tree",
    repo: "https://github.com/fjall-rs/lsm-tree",
    description: "K.I.S.S. implementation of log-structured merge trees",
    license: "MIT / Apache",
    colors: {
      title: "text-emerald-700 dark:text-emerald-300",
      card: "hover:border-emerald-500 hover:bg-emerald-500",
    },
  },
  {
    name: "sfa",
    repo: "https://github.com/fjall-rs/sfa",
    description: "Minimal, flat file archive encoding/decoding library",
    license: "MIT / Apache",
    colors: {
      title: "text-amber-700 dark:text-amber-300",
      card: "hover:border-amber-500 hover:bg-amber-500",
    },
  },
  {
    name: "byteview",
    repo: "https://github.com/fjall-rs/byteview",
    description: "Clonable and inlinable immutable byte slice",
    license: "MIT / Apache",
    colors: {
      title: "text-violet-700 dark:text-violet-300",
      card: "hover:border-violet-500 hover:bg-violet-500",
    },
  },
];
---

<!-- SETUP: This component serves as the landing page's main content (hero section) -->
<h1 class="text-2xl">Organizing data in Rust</h1>

<section class="flex flex-col gap-4" id="projects">
  <h2 class="italic">Repositories</h2>
  <div class="grid grid-cols-2 md:grid-cols-2 sm:grid-cols-2 gap-4">
    {
      cards.map((card) => (
        <a
          href={card.repo}
          target="_blank"
          class={`${card.colors.card} flex flex-col gap-2 rounded-lg border border-gray-500 border-opacity-30 bg-white bg-opacity-5 p-3 transition-all hover:bg-opacity-5`}
        >
          <div class="flex items-center justify-between gap-2">
            <h3 class={`${card.colors.title} font-medium`}>{card.name}</h3>
          </div>
          <div class="opacity-75 text-sm">{card.description}</div>
          <div class="grow" />
          <div class="flex">
            <div class="rounded bg-black bg-opacity-20 px-2 py-1 text-xs font-semibold">
              {card.license}
            </div>
          </div>
        </a>
      ))
    }
  </div>

  <h2 class="mb-3 italic">Sponsors</h2>
  <div class="flex flex-wrap gap-8">
    <a class="hover:opacity-80 transition-opacity" href="https://sqlsync.dev" target="_blank">
      <img class="max-w-80 dark:hidden" src="/logos/orbitinghail.svg" alt="Orbitinghail" />
      <img
        class="max-w-80 hidden dark:block"
        src="/logos/orbitinghail_dark.svg"
        alt="Orbitinghail"
      />
    </a>
  </div>
</section>
